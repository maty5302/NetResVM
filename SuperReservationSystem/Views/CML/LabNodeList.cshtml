@{
	ViewData["Title"] = "Lab nodes";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row ">
    @if (ViewBag.Nodes != null)
    {
        @for (int i = 0; i < ((List<ApiCisco.Model.NodeModel>)ViewBag.Nodes).Count; i++)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex">
                <div class="card flex-fill d-flex flex-column">
                        <div class="card-body" sstyle="height: 175px;">
                            <h5 class="card-title">@ViewBag.Nodes[i].Name</h5><hr />
                            <span> <i class="bi bi-caret-right"></i> @ViewBag.Nodes[i].State</span><br />
                            <span> <i class="bi bi-cpu"></i> CPU: @ViewBag.Nodes[i].Cpu</span><br />
                            <span> <i class="bi bi-cpu"></i> CPU Limit: @ViewBag.Nodes[i].CpuLimit %</span><br />
                            <span> <i class="bi bi-memory"></i> RAM: @ViewBag.Nodes[i].Memory MB</span><br />
                            <span> <i class="bi bi-hdd"></i> HDD: @ViewBag.Nodes[i].DataVolume </span><br />
                            @if (ViewBag.Nodes[i].State=="STARTED")
                            {
                                <form method="post">
                                    <button class="btn btn-primary">Show console output</button>
                                </form>
                            }
                            else{
                                <button class="btn btn-primary" disabled>Show console output</button>
                            }
                            
                        </div>
                </div>
            </div>
            @if ((i + 1) % 4 == 0)
            {
                <div class="w-100"></div>
            }
        }
    }
</div>

