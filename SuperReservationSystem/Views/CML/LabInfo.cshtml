
@model ApiCisco.Model.LabModel


@{
    var serverID = ViewBag.ServerID;
    var serverName = ViewBag.ServerName as string;
    var lab = ViewBag.Lab as ApiCisco.Model.LabModel;
    if(lab!=null)
    {
        ViewData["Title"] = "Lab Info of " + lab.Name;
    }
}
<div class="text-center">
@if(TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>   
    }
</div>

<h1>Information about @lab.Name</h1>

<p>Lab ID: @lab.Id</p>
<p>Lab Name: @lab.Name</p>  
<p>Lab Description: @lab.Description</p>
@if(lab.State.ToLower()=="started"){
    <span>Lab state:</span>

    <span style="color: green; font-weight: bold;">@lab.State.ToLower()</span> <br />
}
else
{
    <p>Lab state: @lab.State.ToLower()</p>
}
<p>Lab Node Count: @lab.Node_count</p>
<p>Lab Link count: @lab.Link_count</p>
<p>Last modified: @lab.Last_modified</p>

<form method="post">
    <button class="btn btn-primary" type="submit" formaction="@Url.Action("LabList","CML", new {id=ViewBag.ServerID,serverName})">Back to Lab List</button> <br />


    <button class="btn btn-primary" type="submit" formaction="@Url.Action("DownloadLab","CML",new{id=ViewBag.ServerID,serverName,id_lab=lab.Id})">Download lab</button>
    <button class="btn btn-primary" type="submit" formaction="@Url.Action("New","Reservation",new{id=ViewBag.ServerID,lab_id=lab.Id})">Reserve this lab</button>
    <button class="btn btn-primary" type="submit" formaction="@Url.Action("OwnLab","CML",new{id=ViewBag.ServerID,lab_id=lab.Id})">Own a lab</button><br />

    <button class="btn btn-danger" type="submit" >Delete this lab</button>
    <button class="btn btn-primary" type="submit">Edit this lab</button><br />

    <button class="btn btn-primary" type="submit" formaction="@Url.Action("StartLab","CML",new{id=ViewBag.ServerID,lab_id=lab.Id})">Start this lab</button>
    <button class="btn btn-primary" type="submit" formaction="@Url.Action("StopLab","CML",new{id=ViewBag.ServerID,lab_id=lab.Id})">Stop the lab</button> 
    
</form>