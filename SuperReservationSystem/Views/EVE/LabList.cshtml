@{
	ViewBag.Title = @ViewBag.ServerName;
}
@model BusinessLayer.Models.EVELabModel
<h1>@ViewBag.ServerName</h1>
<hr />
@if (User.Identity != null && User.IsInRole("Admin"))
{
    <form method="post" enctype="multipart/form-data" action="@Url.Action("ImportLab", "EVE", new {serverID=ViewBag.ServerID })">
        <div class="row mb-3">
            <div class="col-md-12 d-flex align-items-center">
                <div class="flex-grow-1 me-3">
                    <input type="file" class="form-control" id="fileUpload" name="file" accept=".zip" />
                </div>
                <button type="submit" class="btn btn-primary">Import lab</button>
            </div>
        </div>
    </form>
}
<br />
<div class="row ">
    @if (ViewBag.Labs != null)
    {
        @for (int i = 0; i < ((List<BusinessLayer.Models.EVELabModel>)ViewBag.Labs).Count; i++)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex">
                <div class="card flex-fill d-flex flex-column">
                    <a href="@Url.Action("LabInfo","EVE",new {id=ViewBag.ServerID, labId=ViewBag.Labs[i].Id})" class="card-link">
                        <div class="card-body" sstyle="height: 175px;">
                            <h5 class="card-title">@ViewBag.Labs[i].Name</h5><hr />
                            <span>Last modified: @ViewBag.Labs[i].Last_modified</span><br />
                        </div>
                    </a>
                </div>
            </div>
            @if ((i + 1) % 4 == 0)
            {
                <div class="w-100"></div>
            }
        }
    }
</div>
