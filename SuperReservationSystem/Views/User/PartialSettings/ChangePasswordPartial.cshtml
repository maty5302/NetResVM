@model ChangePasswordModel

	<h3>Change password</h3>
	<form method="post" class="p-3 border rounded">
		<div class="form-group">
			<label for="oldPassword">Old password</label>
			<input type="password" class="form-control" id="oldPassword" name="oldPassword" asp-for="oldPassword" required>
		</div>
		<div class="form-group">
			<label for="newPassword">New password</label>
			<input type="password" class="form-control" id="newPassword" name="newPassword" asp-for="newPassword" required>
		</div>
		<div class="form-group">
			<label for="confirmPassword">Confirm new password</label>
			<input type="password" class="form-control" id="confirmPassword" name="confirmPassword" asp-for="confirmPassword" required>
		</div>
		<button type="submit" class="btn btn-primary mt-3" formaction="@Url.Action("ChangePassword","User")">Change password</button>
	</form>
