@{
	ViewBag.Title = "Settings";
}
<h1>@ViewBag.Title</h1>
<hr />

<div class="row">
	@if (ViewBag.UserAuthType=="localhost"){
		<div class="col-12 col-md-6 mb-4">
			@Html.Partial("PartialSettings/ChangePasswordPartial")
		</div>
		@if (User.IsInRole("Admin"))
		{		
			<div class="col-12 col-md-6">
				@Html.Partial("PartialSettings/AddManageUserPartial")
			</div>
		}
	}else
	{
		<div class="justify-content-center align-items-center">
			<h3>Changing password is not available for LDAP user</h3>
		</div>
	}
</div>
