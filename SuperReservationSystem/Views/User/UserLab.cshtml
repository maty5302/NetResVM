@{
	ViewData["Title"] = "My labs";
}
<h1>My labs</h1>
<hr />
<div class="row">
    @if (ViewBag.Labs != null)
    {
        var labs = (List<(int, BusinessLayer.Models.LabModel)>)ViewBag.Labs;
        for (int i = 0; i < labs.Count; i++)
        {
            var labTuple = labs[i];
            int serverID = labTuple.Item1;
            var labModel = labTuple.Item2;

            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex">
                <div class="card flex-fill d-flex flex-column">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <a href="@Url.Action("LabInfo", "CML", new { id = serverID, id_lab = labModel.Id })" class="card-link">
                            <h5 class="card-title">@labModel.Name</h5>
                            <hr />
                            <span>@labModel.State</span><br />
                            <span>Last modified: @labModel.Last_modified</span>
                        </a>
                        <button class="btn btn-danger mt-3 align-self-start">Remove ownership</button>
                    </div>
                </div>
            </div>

            @* Add clearfix for rows dynamically *@
            @if ((i + 1) % 4 == 0)
            {
                <div class="w-100"></div>
            }
        }
    }
</div>
