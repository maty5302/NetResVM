@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
<div class="text-center">
    @if(TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger" role="alert">
			@TempData["ErrorMessage"]
		</div>
	}
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>   
    }
    <h1 class="display-4">Server selection</h1>
    <p>Sorry, this page is work in progress...</p>
    <p>This page will be for selecting your existing server list from database</p>
    <p>Meanwhile, you can select from example CML servers <!--and EVE--> servers.</p>

	<div class="d-flex justify-content-center gap-2 mb-4">
    <!--Hardcoded test of connection to CML and EVE servers-->
    @* <form asp-area="" asp-controller="CML" asp-action="Index" method="post">
        <button class="btn btn-primary" type="submit" name="servername" value="Example">Test of connection to CML</button>
    </form> *@
    
    <form asp-area="" asp-controller="" asp-action="" method="post">
    <button class="btn btn-primary" type="submit" disabled>Test of connection to EVE coming soon</button>
    </form>
@*     <form asp-area="" asp-controller="Home" asp-action="AddServer" method="post">
    <button class="btn btn-primary" type="submit">Add new server - to be moved</button>
    </form> *@
    </div>

    @if (ViewBag.Servers != null)
    {
        <div class="row justify-content-center">
        @for (int i = 0; i < ((List<BusinessLayer.Models.ServerModel>)ViewBag.Servers).Count; i++)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
					<div class="card-body">
                            <h5 class="card-title">@ViewBag.Servers[i].Name - @ViewBag.Servers[i].ServerType</h5><hr />
                        <span>Number of labs: #count</span> <br/>
                        <span>Currently "Running lab name"</span> <br/>
                        <form asp-area="" asp-controller="CML" asp-action="Index" method="post">
                            <button class="btn btn-primary" type="submit" formaction="@Url.Action("Index","CML", new{servername=@ViewBag.Servers[i].Name,id=@ViewBag.Servers[i].Id})">Connect to server</button>
                               
                        </form>
                            <button class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </button>
                    </div>
                </div>
            </div>
        } 
        </div>
    }

</div>
