@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
<div class="text-center">
    
    <h1 class="display-4">Server selection</h1>
    <p>This page will be for selecting your existing server list from database</p>

    <div class="d-flex justify-content-center gap-2 mb-4">
        <form asp-area="" asp-controller="" asp-action="" method="post">
            <button class="btn btn-primary" type="submit" disabled>Test of connection to EVE coming soon</button>
        </form>
    </div>

    <!-- Displaying server cards -->
    <div class="row justify-content-center">
        @if (ViewBag.Servers != null){
            @for (int i = 0; i < ((List<BusinessLayer.Models.ServerModel>)ViewBag.Servers).Count; i++)
            {
                <div class="col-md-3 mb-4 d-flex">
                    <div class="card flex-fill">
                        <div class="card-body d-flex flex-column" style="height: auto;">
                            <h5 class="card-title">@ViewBag.Servers[i].Name</h5><hr />
                            <span>Server type: @ViewBag.Servers[i].ServerType</span><br />
                            <hr />
                            <form asp-area="" asp-controller="CML" asp-action="Index" method="post">
                                <button class="btn btn-primary" type="submit" formaction="@Url.Action("Index",$"{ViewBag.Servers[i].ServerType}", new{servername=@ViewBag.Servers[i].Name,id=@ViewBag.Servers[i].Id})">Connect to server</button>
                                <!--Only for admin-->
                                @if (User.IsInRole("Admin"))
                                {
                                    <button class="btn btn-primary" type="submit" formaction="@Url.Action("Edit","Server",new{id=@ViewBag.Servers[i].Id})">
                                        <i class="bi bi-pen"></i>
                                    </button>

                                    <button class="btn btn-danger" type="submit" formaction="@Url.Action("Remove","Server",new{id=@ViewBag.Servers[i].Id})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </form>

                        </div>
                    </div>
                </div>
            } 
        }
    </div>

        <!-- Add new card with only a plus icon -->
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-3 mb-4 d-flex">
                <a href="@Url.Action("Add", "Server")" class="card flex-fill text-center text-decoration-none ">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <i class="bi bi-plus" style="font-size: 2rem;"></i>
                    </div>
                </a>
            </div>
         }

</div>
