@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
<div class="text-center">
    @if(TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>   
    }
    <h1 class="display-4">Server selection</h1>
    <p>This page will be for selecting your existing server list from database</p>

    <div class="d-flex justify-content-center gap-2 mb-4">
        <!--Hardcoded test of connection to CML and EVE servers-->
        @* <form asp-area="" asp-controller="CML" asp-action="Index" method="post">
        <button class="btn btn-primary" type="submit" name="servername" value="Example">Test of connection to CML</button>
    </form> *@

        <form asp-area="" asp-controller="" asp-action="" method="post">
            <button class="btn btn-primary" type="submit" disabled>Test of connection to EVE coming soon</button>
        </form>
        @*     <form asp-area="" asp-controller="Home" asp-action="AddServer" method="post">
    <button class="btn btn-primary" type="submit">Add new server - to be moved</button>
    </form> *@
    </div>

    @if (ViewBag.Servers != null)
    {
        <div class="row justify-content-center">
            @for (int i = 0; i < ((List<BusinessLayer.Models.ServerModel>)ViewBag.Servers).Count; i++)
            {
                <div class="col-md-3 mb-4 d-flex">
                    <div class="card flex-fill">
                        <div class="card-body" sstyle="height: 175px;">
                            <h5 class="card-title">@ViewBag.Servers[i].Name</h5><hr />
                            <span>Server type: @ViewBag.Servers[i].ServerType</span><br />
                            <span>Number of labs: #count</span> <br/>
                            <span>Currently "Running lab name"</span> <br/>
                            <form asp-area="" asp-controller="CML" asp-action="Index" method="post">
                                <button class="btn btn-primary" type="submit" formaction="@Url.Action("Index","CML", new{servername=@ViewBag.Servers[i].Name,id=@ViewBag.Servers[i].Id})">Connect to server</button>


                                <button class="btn btn-danger" type="submit" formaction="@Url.Action("RemoveServer","Home",new{id=@ViewBag.Servers[i].Id})">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            } 

            <!-- Add new card with only a plus icon -->
            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-3 mb-4 d-flex">
                    <a href="@Url.Action("AddServer", "Home")" class="card flex-fill text-center text-decoration-none">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <i class="bi bi-plus" style="font-size: 2rem;"></i>
                        </div>
                    </a>
                </div>
            }


        </div>
    }

</div>
